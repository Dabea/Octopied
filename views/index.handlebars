<div class="log-in-grid">
  <div class="top-right">
    <a href="/signup" class="waves-effect waves-teal btn-flat">Sign up</a>
  </div>
  <div class="main">
    <h1>Octopied</h1>
    <p>An octopus adventure...in space.</p>
    <form id="signin" name="signin" method="post" action="signin">
      <div class="input-field">
        <input id="password" type="password" class="validate">
        <label for="password">Password</label>
      </div>
      <div class="input-field">
        <input id="email" type="email" class="validate">
        <label for="email">Email</label>
        <a href="/forgot" class="waves-effect waves-teal btn-flat">Forgot Password?</a>
        <input class="waves-effect waves-light btn log-in-btn" type="submit" value="Sign In"></a>
      </div>
    </form>
  </div>
</div>